<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_message">
      <%= pluralize(@post.errors.count, "error") %>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg%></li>
      <% end %>
    </div>
   <% end %>

   <div class="field">
     <%= f.label :title %> <br />
     <%= f.text_field :title %>
   </div>

   <div class="field">
     <%= f.label :content %> <br />
     <%= f.text_area :content %>
   </div>

   <div class="action">
     <%= f.submit %>
   </div>

<% end %>
   
